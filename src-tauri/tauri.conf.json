{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Tauri App",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "title": "Floating Counter",
        "width": 1000,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ]
  },
  "identifier": "com.example.mytauriapp",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
